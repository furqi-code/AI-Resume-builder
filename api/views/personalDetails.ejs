<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personal INFO</title>
    <%- include("shared/links"); %>
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <!-- Header -->
    <%- include("shared/header", {loggedin : isAuth}); %>

    <!-- Toast -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast hide" id="addToast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <img src="/images/detail.png" class="rounded me-2" alt="..." width="40" height="40">
                <strong class="me-auto">AI resume</strong>
                <small class="text-body-secondary">just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-black">
                Personal details added in DB
            </div>
        </div>
    </div>

    <!-- personal Details -->
    <% if(arr.length === 0) { %>
        <div class="container mt-5 d-flex justify-content-center" id="personalDiv">
            <div class="col-md-8 col-lg-6 form-container">
                <h3 class="text-center mb-4">Fill Up Personal Details</h3>
                <form>
                    <div class="mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullName" placeholder="Enter full name">
                        <small id="nameError" class="text-danger"></small>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" placeholder="your@email.com">
                        <small id="emailError" class="text-danger"></small>
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <input type="address" class="form-control" id="address" placeholder="address">
                        <small id="addressError" class="text-danger"></small>
                    </div>
                    <div class="mb-3">
                        <label for="linkedin" class="form-label">LinkedIn Profile</label>
                        <input type="text" class="form-control" id="linkedin" placeholder="Enter LinkedIn profile link">
                        <small id="linkedinError" class="text-danger"></small>
                    </div>
                    <div class="mb-3">
                        <label for="github" class="form-label">GitHub Profile</label>
                        <input type="url" class="form-control" id="github" placeholder="Enter GitHub profile link">
                        <small id="githubError" class="text-danger"></small>
                    </div>
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phoneNumber" placeholder="+1234567890">
                        <small id="phoneError" class="text-danger"></small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Gender</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="male" value="Male">
                            <label class="form-check-label" for="male">Male</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" id="female" value="Female">
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                        <small id="genderError" class="text-danger"></small>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-center">
                            <button type="button" class="btn btn-primary" id="personalDetails">Save Details</button>
                        </div>
                        <div class="d-flex">
                            <a href="http://localhost:10000/">
                                <button type="button" class="btn btn-warning" >Previous page</button>
                            </a>
                        </div>    
                    </div>
                </form>
            </div>
        </div>
    <% }else{ %>
        <% arr.forEach(function(item){ %>
            <div class="container mt-5 d-flex justify-content-center" id="personalDiv">
                <div class="col-md-8 col-lg-6 form-container">
                    <h3 class="text-center mb-4">Fill Up Personal Details</h3>
                    <form>
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="fullName" value="<%=item.name%>" placeholder="Enter full name">
                            <small id="nameError" class="text-danger"></small>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" value="<%=item.email%>" placeholder="your@email.com">
                            <small id="emailError" class="text-danger"></small>
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label">Address</label>
                            <input type="address" class="form-control" id="address" value="<%= item.address %>" placeholder="address">
                            <small id="addressError" class="text-danger"></small>
                        </div>
                        <div class="mb-3">
                            <label for="linkedin" class="form-label">LinkedIn Profile</label>
                            <input type="text" class="form-control" id="linkedin" value="<%=item.linkedin%>" placeholder="Enter LinkedIn profile link">
                            <small id="linkedinError" class="text-danger"></small>
                        </div>
                        <div class="mb-3">
                            <label for="github" class="form-label">GitHub Profile</label>
                            <input type="url" class="form-control" id="github" value="<%=item.github%>" placeholder="Enter GitHub profile link">
                            <small id="githubError" class="text-danger"></small>
                        </div>
                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="phoneNumber" value="<%=item.contact%>" placeholder="+1234567890">
                            <small id="phoneError" class="text-danger"></small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Gender</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="male" value="<%=item.gender%>">
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="gender" id="female" value="<%=item.gender%>">
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                            <small id="genderError" class="text-danger"></small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" id="personalDetails">Save Details</button>
                            </div>
                            <div class="d-flex">
                                <a href="http://localhost:10000/">
                                    <button type="button" class="btn btn-warning" >Previous page</button>
                                </a>
                            </div>    
                        </div>
                    </form>
                </div>
            </div>
        <% }) %>
    <% } %>

    

   
    <script src="/js/personal.js"></script>
</body>
</html>
